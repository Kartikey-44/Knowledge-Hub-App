<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ThirdScreen"
    android:orientation="vertical"
    android:background="@color/gray">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageButton
            android:id="@+id/back"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:contentDescription="Back"
            android:background="@color/gray"
            android:layout_marginTop="30dp"
            android:layout_marginStart="15dp"
            android:src="@drawable/outline_arrow_back_24"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:text="Website Development"
            android:textAlignment="center"
            android:textColor="@color/offwhite"
            android:textSize="28sp"
            android:textStyle="bold" />
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Languages Can Be Used:"
        android:textColor="@color/offwhite"
        android:layout_margin="20dp"
        android:layout_gravity="center"
        android:textSize="22sp"
        android:textStyle="bold"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:id="@+id/htmlcss"
            android:layout_width="120dp"
            android:layout_height="120dp"
            app:cardCornerRadius="60dp"
            android:clipToOutline="true"
            app:cardBackgroundColor="#F8F8F8"
            android:layout_margin="30dp">
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/htmlcsslogo"
                android:layout_gravity="center"/>

        </androidx.cardview.widget.CardView>

        <View
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_weight="1"/>
        <androidx.cardview.widget.CardView
            android:id="@+id/js"
            android:layout_width="120dp"
            android:layout_height="120dp"
            app:cardCornerRadius="60dp"
            android:clipToOutline="true"
            app:cardBackgroundColor="@color/white"
            android:layout_margin="30dp">
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/jslogo"
                android:layout_gravity="center"/>

        </androidx.cardview.widget.CardView>

    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="The IDE To Use :"
        android:textStyle="bold"
        android:textColor="@color/offwhite"
        android:textAlignment="center"
        android:textSize="22sp"/>
    <androidx.cardview.widget.CardView
        android:id="@+id/vscode"
        android:layout_margin="20dp"
        android:layout_width="120dp"
        android:layout_height="120dp"
        app:cardCornerRadius="60dp"
        android:layout_gravity="center"
        app:cardBackgroundColor="@color/white"
        android:clipToOutline="true">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/vslogo"/>

    </androidx.cardview.widget.CardView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="The Databases That Can Be Used:"
        android:textAlignment="center"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@color/offwhite"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <androidx.cardview.widget.CardView
            android:id="@+id/firebase"
            android:layout_width="120dp"
            android:layout_height="120dp"
            app:cardCornerRadius="60dp"
            app:cardBackgroundColor="@color/white"
            android:layout_margin="20dp"
            android:clipToOutline="true">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/firebase"/>

        </androidx.cardview.widget.CardView>
        <View
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_weight="1"/>
        <androidx.cardview.widget.CardView
            android:id="@+id/sql"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_margin="20dp"
            app:cardCornerRadius="60dp"
            android:clipToOutline="true">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/sqllogo"/>

        </androidx.cardview.widget.CardView>

    </LinearLayout>



</LinearLayout>