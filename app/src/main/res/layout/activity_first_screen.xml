<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FirstScreen"
    android:orientation="vertical"
    android:background="@color/offwhite">
    <androidx.cardview.widget.CardView
        android:layout_marginTop="30dp"
        android:layout_marginBottom="24dp"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:cardBackgroundColor="@color/gray1"
        app:cardCornerRadius="50dp"
        android:layout_gravity="center">
        <ImageView
            android:layout_width="95dp"
            android:layout_height="95dp"
            android:layout_gravity="center"
            android:src="@mipmap/ic_launcher_foreground"/>
    </androidx.cardview.widget.CardView>

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Welcome To\nKnowledge Hub"
    android:fontFamily="@font/intervariablefontopszwght"
    android:layout_gravity="center"
    android:textColor="@color/black"
    android:layout_marginBottom="30dp"
    android:layout_marginTop="0dp"
    android:textSize="40sp"
    android:textStyle="bold"
    android:textAlignment="center"
    />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Discover curated learning paths"
        android:layout_gravity="center"
        android:textSize="20sp"
        android:fontFamily="@font/robotovariablefontwdthwght"
        android:textStyle="italic"
        android:textColor="@color/black"
        android:layout_marginBottom="60dp"/>
    <Button
        android:id="@+id/letsgo"
        android:layout_height="80dp"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:text="Get Started"
        android:paddingHorizontal="32dp"
        android:paddingVertical="16dp"
        android:textSize="25sp"
        android:layout_margin="30dp"/>


</LinearLayout>